# Environment
ENVIRONMENT=local
DEBUG=true

# PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=helpdesk

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT Security
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_MINUTES=10080

# CORS
CORS_ALLOW_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# OpenAI (для AI-классификации и генерации ответов)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# ============================================================================
# Интеграции с внешними каналами
# ============================================================================

# WhatsApp Business API (Meta) - официальный
# Получить в: https://developers.facebook.com/apps/
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_ACCESS_TOKEN=your-access-token
WHATSAPP_VERIFY_TOKEN=helpdesk_verify_token

# Twilio WhatsApp (альтернатива, проще для тестов)
# Получить в: https://console.twilio.com/
# Sandbox: Messaging -> Try it out -> Send a WhatsApp message
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_WHATSAPP_NUMBER=+14155238886

# Twilio Voice (голосовой AI-бот)
# Требуется купить номер Twilio (~$1.15/месяц)
# Phone Numbers -> Buy a number
TWILIO_VOICE_NUMBER=+1234567890
# Номер оператора для перевода звонков (ваш мобильный)
OPERATOR_PHONE_NUMBER=+77001234567

# Email Integration (IMAP/SMTP)
# Для Gmail: включите "Доступ к небезопасным приложениям" или используйте App Password
EMAIL_IMAP_SERVER=imap.gmail.com
EMAIL_IMAP_PORT=993
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_ADDRESS=support@yourcompany.com
EMAIL_PASSWORD=your-email-password-or-app-password
COMPANY_NAME=Help Desk
